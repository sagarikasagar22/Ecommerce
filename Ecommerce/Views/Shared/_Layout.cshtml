    <script type="text/javascript" language="Javascript">

        function ToggleDiv(addToCart) {

            var clicked = false;
            var hideDiv = document.getElementById('hide' + addToCart);

            var displayHideDiv = hideDiv.style.display;

            var showDiv = document.getElementById('show' + addToCart);

            if (addToCart !== null && addToCart != "") {
                if (displayHideDiv == "block") {

                    hideDiv.style.display = "none";

                    showDiv.style.display = "block";
                    //var qtyUpdate = $('#qtyUpdate').val();
                    //document.getElementById('qtyUpdate').innerHTML = qtyUpdate +1;

                }
