        }

    </script>
    <script type="text/javascript" language="Javascript">

        $(document).ready(function () {

        });
        $(document).ready(function () {
            $('.addCart').click(function () {
                var addToCart = $(this).attr("data-id");
                GetAddToCart(addToCart);
                ToggleDiv(addToCart);
                //$.get('/Products/AddCart1', { itemId: addToCart }, function (data) {
                //    alert('1');
                //});
            });

            $('.addQty').click(function () {
                var addQty = $(this).attr("data-id");
                GetAddQuantity(addQty);
            });
            $('.removeQty').click(function () {
                var removeQty = $(this).attr("data-id");
                GetRemoveQuantity(removeQty);
            });
        });

        //var itemId = $("#itemId").val();
        function GetAddToCart(addToCartId) {
            $.ajax({
                type: "POST",
                url: '/Electronics/AddCart1',
                data: { itemId: addToCartId },
                dataType: "json",
                cache: false,
                success: function (data) {
                    if (data) {
                        //alert("success");
                        var spanId = document.getElementById('bedgeSpan');
                        spanId.innerHTML = data.CartItemCount;

                        var spanQuantity = document.getElementById('qtyUpdate' + data.ItemId);
                        //spanQuantity.innerHTML = data.ItemCount;
                        //spanQuantity.val(data.ItemCount);
                        spanQuantity.value = data.ItemCount;
                    }
                    //else {
                    //    alert("Fail");
                    //}
                },
                error: function (xhr) {
                    //debugger;
                    console.log(xhr.responseText);

                }
            });
        };

        //Add Quantity
        function GetAddQuantity(addQtyId) {
            $.ajax({
                type: "POST",
                url: '/Checkout/AddQuantity',
                data: { id: addQtyId },
                dataType: "json",
                cache: false,
                success: function (data) {
                    if (data) {
                        var spanId = document.getElementById('bedgeSpan');
                        spanId.innerHTML = data.CartItemCount;

                        var inputId = document.getElementById('qtyUpdate' + data.ItemId);
                        inputId.value = data.ItemCount;
                    }
                },
                error: function (xhr) {
                    console.log(xhr.responseText);
                }
            });
        };

        //RemoveQuantity

        function GetRemoveQuantity(removeQtyId) {
            $.ajax({
                type: "POST",
                url: '/Checkout/RemoveQuantity',
                data: { id: removeQtyId },
                dataType: "json",
                cache: false,
                success: function (data) {
                    if (data) {
                        var spanId = document.getElementById('bedgeSpan');
                        spanId.innerHTML = data.CartItemCount;

                        var inputId = document.getElementById('qtyUpdate' + removeQtyId);
                        inputId.value = data.ItemCount;

                        if (data.ItemCount == 0) {
                            var hideDiv = document.getElementById('hide' + removeQtyId);
                            var showDiv = document.getElementById('show' + removeQtyId);

                            hideDiv.style.display = "block";
                            showDiv.style.display = "none";

                        }
                    }
                },
                error: function (xhr) {
                    //debugger;
                    console.log(xhr.responseText);
                }
            });
        };

    </script>

