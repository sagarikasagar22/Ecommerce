
@model Ecommerce.Models.Custom.CustomItem

@{
    var cartQty = @Model.ItemQty;
}

<div class=" row align-items-center justify-content-center flex-center ml-auto mr-auto mx-auto float-none">
    <div class="def-number-input number-input safari_only mb-0" style="line-height:20px;" id="addRemoveQty">
        <div class="btn-group" data-toggle="buttons">
            <button class="btn btn-sm button btn-rounded waves-effect waves-light removeQty" data-id="@Model.ItemID" onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                —
            </button>
            <input id="@Model.QtyUpdate" class="quantity" min="0" name="quantity" value="@Model.ItemQty" readonly="readonly" type="number" style="max-width: 3.5rem; padding: .5rem;">

            <button class="btn btn-sm button btn-rounded waves-effect waves-light addQty" data-id="@Model.ItemID" onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                +
            </button>
        </div>
    </div>
</div>
